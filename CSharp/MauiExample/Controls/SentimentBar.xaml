<Grid xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BridgeRock.MauiExample.Controls.SentimentBar" 
             RowSpacing="0" ColumnSpacing="0" >
    <Grid.ColumnDefinitions>
        <ColumnDefinition Width="100*"/>
        <ColumnDefinition Width="1600*"/>
        <ColumnDefinition Width="100*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
        <RowDefinition x:Name="topRow" Height="1*" />
        <RowDefinition x:Name="barRow" Height="0*" />
        <RowDefinition x:Name="bottomRow" Height="1*" />
    </Grid.RowDefinitions>
    <RoundRectangle x:Name="rBar" GridLayout.Row="1" GridLayout.Column="1" StrokeThickness="0"
                    CornerRadius="{Binding Path=Width, Source={RelativeSource Self}}" Fill="Purple" />
</Grid>