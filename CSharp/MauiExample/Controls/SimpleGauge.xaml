<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BridgeRock.MauiExample.Controls.SimpleGauge" Background="Gray">
    <Grid ColumnDefinitions="4,1*,4" RowSpacing="0" ColumnSpacing="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="4" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="4" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="4" />
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="1" Grid.Column="1" Fill="White" />
        <Rectangle Grid.Row="3" Grid.Column="1" Fill="White" />
        <Grid Grid.Row="1" Grid.RowSpan="3" Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition x:Name="topRow" Height="1*" />
                <RowDefinition Height="8" />
                <RowDefinition x:Name="bottomRow" Height="1*" />
            </Grid.RowDefinitions>
            <Rectangle Grid.Row="1" Fill="Black" />
        </Grid>
    </Grid>
</ContentView>