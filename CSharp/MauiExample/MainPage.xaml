<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"      
             xmlns:controls="clr-namespace:BridgeRock.MauiExample.Controls"
             x:Class="MauiExample.MainPage"             
             BackgroundColor="{DynamicResource SecondaryColor}">

    <Grid x:Name="gridMain" RowSpacing="25" 
          RowDefinitions="1*,12*,1*"
          ColumnDefinitions="1*,1*,1*,1*,1*,8*,1*,1*"
          Padding="{OnPlatform iOS='30,60,30,30', Default='30'}">

        <Slider x:Name="sldPerception" Grid.Row="1" Grid.Column="1" Minimum="-1" Maximum ="1" Value="0" 
                IsEnabled="False" Background="Red" />

        <controls:SentimentViewer Grid.Row="1" Grid.Column="5" Background="Green" />
        <controls:SimpleGauge x:Name="sgPerception" GridLayout.Row="1" Grid.Column="3" />
    </Grid>
</ContentPage>
